{
  "extends": "@brizy/tsconfig/react.json",
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "visual/*": ["editor/js/*"],
      "test-utils": ["./jest-utils/test-utils"]
    }
  },
  "include": [
    "editor/**/*.ts",
    "editor/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "kits",
    "popups",
    "templates",
    "**/libs/**"
  ]
}

